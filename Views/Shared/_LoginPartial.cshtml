@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
        <li class="nav-item dropdown">
            <a class="nav-link text-dark dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="bi bi-file-earmark-person"></i>&nbsp;  @User.Identity?.Name!
            </a>
            <ul class="dropdown-menu">
                <li class="nav-item">
                    <a class="dropdown-item text-dark" asp-area="Identity" asp-page="/Account/Manage/Index"><i class="bi bi-person"></i>&nbsp; Go to Profile</a>
                </li>
                <li class="nav-item">
                    <a class="dropdown-item text-dark" href="#"><i class="bi bi-cart"></i>&nbsp; Carts</a>
                </li>
                <li class="nav-item">
                    <a class="dropdown-item text-dark" asp-controller="Orders" asp-action="Index"><i class="bi bi-shop"></i>&nbsp; Orders</a>
                </li>
                <li class="nav-item">
                    <a class="dropdown-item text-dark" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })"><i class="bi bi-box-arrow-right"></i>&nbsp; Logout</a>
                </li>
              @*   <li><hr class="dropdown-divider"></li> *@
            </ul>
        </li>
}
else
{
    <li class="nav-item">
        <a class="text-dark" asp-area="Identity" asp-page="/Account/Register">
            <button type="button" class="btn btn-primary btn-sm"><i class="bi bi-person-add"></i>&nbsp;Register</button>
        </a>
    </li>
    <li class="nav-item">
        <a class="text-dark" asp-area="Identity" asp-page="/Account/Login">
            <button type="button" class="btn btn-primary btn-sm"><i class="bi bi-person-bounding-box"></i>&nbsp;Login</button>
        </a>
    </li>
}
</ul>
