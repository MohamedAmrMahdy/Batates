@model IEnumerable<Batates.Models.Restaurant>

@* @model Batates.Models.Category *@
@{
    ViewData["Title"] = "Category";
    var currentCat = ViewBag.category as Category;
}


<!-- Page Content-->
<div class="container px-4 px-lg-5">
    <!-- Heading Row-->
    <div class="row gx-4 gx-lg-5 align-items-center my-5">
        <div class="col-lg-7"><img class="img-fluid rounded mb-4 mb-lg-0" src="@(currentCat.ImageURL  ?? "https://dummyjson.com/image/900x400")" alt="..." /></div>
        <div class="col-lg-5">
            <h1 class="font-weight-light">@currentCat.Name</h1>
            <p>@currentCat.Description</p>
        @* <a class="btn btn-primary" href="#!">Call to Action!</a> *@
        </div>
    </div>
    <!-- Call to Action-->
   
        @*  <div class="card-body"><p class="text-white m-0">This call to action card is a great place to showcase some important information or display a clever tagline!</p></div> *@
        <div class="input-group rounded">
            <input type="search" class="form-control rounded" placeholder="Search" aria-label="Search" aria-describedby="search-addon" />
            <span class="input-group-text border-0" id="search-addon">
                <i class="fas fa-search"></i>
            </span>
        </div>

        <br />
        <br />
    
    <!-- Content Row-->

    <div class="row gx-4 gx-lg-5">
    @foreach(var item in Model)
    {
        <div class="col-md-4 mb-5">
                <a asp-action="Restaurant" asp-route-id="@item.ID">
            <div class="card h-100">
                    <div class="card-header">
                        <img class="img-fluid rounded mb-4 mb-lg-0" src="@(item.ImageURL ?? "https://dummyjson.com/image/500x300")" />

                    </div>
                <div class="card-body">
                       
                    <h2 class="card-title">@item.Name</h2>
                    <p class="card-text">@item.Description</p>
                </div>
           
            </div>
                </a>
        </div>
        
        
        
    }
    </div>
</div>

<!-- Bootstrap core JS-->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

<style>
   
    a {
        text-decoration: none;
       
    }