@model IEnumerable<Batates.Models.Category>

@{
    ViewData["Title"] = "Batates - Homepage";
}

@* override style, to make the header full-width without breaking rest of the page *@
<header class="header-container py-5">
    <div class="container col px-5 justify-content-between">
        <div class="row gx-5">
            <div class="col-lg-6">
                <div class="text-center my-5">
                    <h1 class="fw-bolder text-white mb-2 text-gradient">Your everyday</h1>
                    <h3 class="fw-bolder text-white mb-2">Right away</h3>
                    <p class="lead text-white-50 mb-4">Order food and grocery delivery online from hundreds of restaurants and shops nearby. Find deals, free delivery, and more from our restaurant partners.</p>
                    <div class="d-grid gap-3 d-sm-flex justify-content-sm-center">
                        <a class="btn btn-primary btn-lg px-4 me-sm-3" href="#features">Find Restaurants</a>
                        <a class="btn btn-outline-light btn-lg px-4" href="#!">Find Potatos</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="row gx-5">
            <div class="col-lg-6">
                <div class="card-image-container">
                    <div class="eye-box">
                        <div class="eye"></div>
                        <div class="eye"></div>
                    </div>
                    <img src="https://i.ibb.co/SQRznZx/DYd5BPx.png">
                </div>
            </div>
        </div>
    </div>
</header>

<div class="category-container" style="margin-bottom: 10rem;">
    @foreach (var item in Model)
    {
        <a asp-action="Category" asp-route-id="@item.ID">
            <div class="category">
                <img src="@item.ImageURL" alt="Category Image">
                <h2>@item.Name</h2>
                @* <p>@item.Description</p> *@
            </div>
        </a>


       

    }
</div>

@section Scripts
{
    <script src="~/js/home.js"></script>
}


<style>
    .text-gradient{
        background: linear-gradient(#f7f7f7, #ff9a02);
        -webkit-text-fill-color: transparent;
        -webkit-background-clip: text;
        text-transform: uppercase;
        font-family: cursive;
        font-size: 3.2rem !important;
    }
        .eye-box{
            display:flex;
        }
        .eye-box .eye{
            position: relative;
            width: 120px;
            height: 120px;
            display: block;
            background: #fff;
            margin: 0 20px;
            border-radius: 50%;
            box-shadow: 0 5px 45px rgba(0,0,0,0.2),
                    inset 0 0 15px #0000,
                    inset 0 0 25px #0000;
        }

        .eye-box .eye::before {
            content: "";
            position: absolute;
            top: 50%;
            left: 35px;
            transform:translate(-50%,-50%);
            width: 45px;
            height: 45px;
            border-radius: 50%;
            background:#000;
            border: 10px solid #000;
            box-sizing: border-box;
        }

    .header-container {
        width: 100vw;
        position: relative;
        left: 50%;
        right: 50%;
        margin-left: -50vw;
        margin-right: -50vw;
        background-image: linear-gradient(to bottom, rgba(245, 246, 252, 0.52), rgb(195 98 27 / 71%)), url(https://images.unsplash.com/photo-1561350111-7daa4f284bc6?q=80&w=2670&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D);
        background-position-x: right;
        background-size: cover;
    }

    .card-image-container {
        /* background: #f4d4ff;
        border-radius: 40px; */
        flex-direction: column;
        width: 256px;
        height: 256px;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .card-image-container {
        transition: all 300ms ease;
        filter: drop-shadow(0px 3px 9px rgba(0, 0, 0, 0.3));
    }

        .card-image-container img {
            width: 100%;
            height: auto;
            transform: rotate(59deg) scale(1.3);
        }


    .card-image-container:hover {
        transform: rotate(-15deg) scale(1.1);
        filter: drop-shadow(0px 20px 10px rgba(0, 0, 0, 0.3));
    }


   body {
  font-family: 'Roboto', sans-serif;
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}
header.header-container {
  background-color: #343a40; /* Dark background color */
  padding-top: 5rem; /* Top padding */
  padding-bottom: 5rem; /* Bottom padding */
  text-align: center; /* Center text */
  color: #ffffffd1; /* Font color */
}

header.header-container .container {
  display: flex; /* Use flexbox */
  flex-direction: row; /* Stack items vertically */
  justify-content: center; /* Center content vertically */
  align-items: center; /* Center content horizontally */
  padding-left: 50px; /* Padding from left */
  padding-right: 50px; /* Padding from right */
}

header.header-container h1 {
  font-size: 2.5rem; /* Header 1 font size */
}

header.header-container p {
  font-size: 1.25rem; /* Paragraph font size */
  margin-top: 20px; /* Add margin from the top */
  margin-bottom: 20px; /* Add margin from the bottom */
}

header.header-container .btn {
  border-radius: 30px; /* Rounded corners */
  padding: 12px 30px; /* Padding */
  font-size: 1.1rem; /* Button font size */
  text-transform: uppercase; /* Uppercase text */
  font-weight: bold; /* Bold font weight */
  transition: all 0.3s ease; /* Smooth transition */
  cursor: pointer; /* Cursor style */
  text-decoration: none; /* Remove default underline */
  display: inline-block; /* Display as inline-block */
  margin: 10px; /* Margin */
  border: none; /* Remove border */
}

header.header-container .btn-primary {
  background: linear-gradient(to right, #4e73df, #224abe); /* Gradient background */
  color: #ffffffa4; /* Button text color */
}

header.header-container .btn-primary:hover {
  transform: translateY(-3px); /* Move button up on hover */
  box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.3); /* Add shadow on hover */
}

header.header-container .btn-outline-light {
  color: #f8f9fab6; /* Light button text color */
  border: 2px solid #f8f9fac4; /* Light button border */
  background-color: transparent; /* Transparent background */
}

header.header-container .btn-outline-light:hover {
  color: #212529; /* Light button hover text color */
  background-color: #f8f9fa; /* Light button hover background color */
}









/* Grid container for categories */
.category-container {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(20%, 1fr)); /* Adjust the size of categories */
  grid-gap: 20px; /* Adjust the gap between categories */
  margin: 20px; /* Add margin around the grid */
}

/* Category item */
.category {
  border: 1px solid #ccc;
  padding: 10px;
  text-align: center;
}

/* Add your additional styling here */
.category img {
  max-width: 100%;
  height: auto;
}

.category:hover {
  transform: scale(1.1); /* Scale up by 10% */
}

/* Responsive layout for smaller screens */
@@media (max-width: 1200px) {
  .category-container {
      grid-template-columns: repeat(auto-fill, minmax(25%, 1fr)); /* Adjust the size of categories for smaller screens */
  }
}

@@media (max-width: 768px) {
  .category-container {
      grid-template-columns: repeat(auto-fill, minmax(50%, 1fr)); /* Adjust the size of categories for even smaller screens */
  }
}

/* Limiting categories to 5 per row */
@@media (min-width: 1200px) {
  .category-container {
      max-width: 1000px; /* Set a maximum width */
      margin-left: auto;
      margin-right: auto;
  }
}

</style>
