@model IEnumerable<Batates.Models.Order>

@{
    ViewData["Title"] = "Index";
}

<div class="card shadow border-1 my-4">
    <div class="card-header bg-primary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Order List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">

        <table id="productTable" class="table table-bordered  text-center ">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ID)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.OrderDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.State)
                    </th>   
                    <th>
                        @Html.DisplayNameFor(model => model.TotalPrice)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(m=>item.ID)</td>
                        <td>@Html.DisplayFor(m => item.OrderDate)</td>
                        <td>@Html.DisplayFor(m => item.State)</td>
                        <td>@Html.DisplayFor(m => item.TotalPrice)</td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>





@section Scripts
{
    <script src="~/js/order.js"></script>
}