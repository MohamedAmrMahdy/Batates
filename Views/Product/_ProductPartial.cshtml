@model Batates.Models.Product

<div class="card-body">
    <div class="d-flex w-100 justify-content-between">
        <span>
            <h5 class="card-title">@Html.DisplayFor(model => model.Name)</h5>
            <small class="text-primary mx-2">123,432 <i class="bi bi-hand-thumbs-up"></i></small>
            <p class="card-text mx-2">@Html.DisplayFor(model => model.Description)</p>
        </span>
        <span>
            <img src="@Html.DisplayFor(model => model.ImageURL)" class="card-img-top product_image" alt="product_image">
        </span>
    </div>
    <div class="d-flex w-100 justify-content-between align-items-center mt-2">
        <div>
            <h2 class="text-primary mx-3 fw-bold">@Html.DisplayFor(model => model.Price) <i class="bi bi-currency-dollar"></i></h2>
        </div>
        <div>
            <a href="#" class="btn btn-primary mx-1"><i class="bi bi-hand-thumbs-up-fill"></i></a>
            <a href="#" class="btn btn-primary mx-1"><i class="bi bi-cart-plus-fill"></i></a>
        </div>
    </div>
</div>