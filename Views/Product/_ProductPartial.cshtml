@model Batates.Models.Product
@using System.Security.Claims;

@{
    var UserID = (string)User.FindFirstValue(ClaimTypes.NameIdentifier)!;
}
@* @User.FindFirstValue(ClaimTypes.NameIdentifier) *@


</>
<div class="card-body">
    <div class="d-flex w-100 justify-content-between">
        <span>
            <h5 class="card-title">@Html.DisplayFor(model => model.Name)</h5>
            <small class="text-primary mx-2">123,432 <i class="bi bi-hand-thumbs-up"></i></small>
            <p class="card-text mx-2">@Html.DisplayFor(model => model.Description)</p>
        </span>
        <span>
            <img src="@Html.DisplayFor(model => model.ImageURL)" class="card-img-top product_image" alt="product_image">
        </span>
    </div>
    <div class="d-flex w-100 justify-content-between align-items-center mt-2">
        <div>
            <h2 class="text-primary mx-3 fw-bold">@Html.DisplayFor(model => model.Price)</h2>
        </div>
        <div>
            @* <a class="btn btn-primary mx-1" onclick="Add('/Cart/Add/@Model.ID')"><i class="bi bi-cart-plus-fill"></i></a> *@
            @* <a id="addToCartBtn" class="btn btn-primary mx-1" data-id="@Model.ID" data-userid="@UserID" data-restid="@Model.RestaurantID"><i class="bi bi-cart-plus-fill"></i></a> *@
            @if (UserID != null)
            {
                <a  class="btn btn-primary mx-1 addToWishlistBtn" data-id="@((int)Model.ID)"><i class="bi bi-heart-fill"></i></a>
                <a class="btn btn-primary mx-1 addToCartBtn" data-id="@Model.ID"><i class="bi bi-cart-plus-fill"></i></a>

            }
            else
            {
                <button class="btn btn-primary mx-1" disabled><i class="bi bi-heart-fill"></i></button>
                <button class="btn btn-primary mx-1" disabled><i class="bi bi-cart-plus-fill"></i></button>
            }
        </div>
    </div>
</div>

