@model Category

@{
    
}
<div class="form-floating mb-3 col-12">
    <input asp-for="Name" class="form-control " aria-required="true" placeholder="Name" />
    <label asp-for="Name" class="ms-2 text-muted">Name</label>
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="form-floating mb-3 col-12">
    <input asp-for="Description" class="form-control " aria-required="true" placeholder="Description" />
    <label asp-for="Description" class="ms-2 text-muted"></label>
    <span asp-validation-for="Description" class="text-danger"></span>
</div>
<div class="form-floating mb-3 col-12">
    <input asp-for="ImageURL" id="imageInput" class="form-control " aria-required="true" placeholder="Image" />
    <label asp-for="ImageURL" class="ms-2 text-muted">Image</label>
    <span asp-validation-for="ImageURL" class="text-danger"></span>
    <button type="button" id="updateImageButton" class="btn btn-primary mt-2">Upload Image</button>
</div>





