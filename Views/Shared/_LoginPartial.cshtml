@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
        <li class="nav-item dropdown">
            <a class="nav-link  dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              &nbsp;  @User.Identity?.Name!
            </a>
            <ul class="dropdown-menu">
                <li class="nav-item">
                    <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index"><i class="bi bi-person-circle"></i>&nbsp; Go to Profile</a>
                </li>
                <li class="nav-item">
                    <a class="dropdown-item" asp-controller="Cart" asp-action="Overview"><i class="bi bi-basket"></i>&nbsp; Cart</a>
                </li>
                </li>
                <li class="nav-item">
                    <a class="dropdown-item" asp-controller="Wishlist" asp-action="Overview"><i class="bi bi-heart"></i>&nbsp; Wishlist</a>
                </li>
                <li class="nav-item">
            <a class="dropdown-item" asp-controller="Order" asp-action="History" asp-action="Index"><i class="bi bi-cart"></i>&nbsp; Orders</a>
                </li>
                <li class="nav-item">
                    <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })"><i class="bi bi-box-arrow-right"></i>&nbsp; Logout</a>
                </li>
}
else
{
    <li class="nav-item">
        <a class="text-dark" asp-area="Identity" asp-page="/Account/Register">
            <button type="button" class="btn btn-primary btn-sm"><i class="bi bi-person-add"></i>&nbsp;Register</button>
        </a>
    </li>
    <li class="nav-item">
        <a class="text-dark" asp-area="Identity" asp-page="/Account/Login">
            <button type="button" class="btn btn-primary btn-sm"><i class="bi bi-person-bounding-box"></i>&nbsp;Login</button>
        </a>
    </li>
}
</ul>
